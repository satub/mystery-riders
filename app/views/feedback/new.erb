<% if flash.has?(:message) %>
  <p><%=flash[:message]%></p>
<% end %>
<%path = "../../images/lines/"%>
<h2><img src="<%=path%><%=@line.logo%>" width = 30px> Write Feedback for the <%=@line.line%> line:</h2>
<form method = "POST" action = "/feedback">
<input type = "hidden" name = "line[line]" value = "<%=@line.line%>">
<p>Rate your Ride:
  <%i = 1%>
  <%5.times do%>
  <input type = "radio" name = "feedback[rating]" value = "<%=i%>"> <%=i%>
  <%i += 1%>
<%end%></p>
<p>Feedback: <input type = "text" name = "feedback[content]"></p>
<input type = "submit" value = "Submit">
</form>
