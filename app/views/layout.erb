    <% if flash.has?(:message) %>
      <p><%=flash[:message]%></p>
    <% end %>
    <br></br>
    <%= yield%>
    <br></br>

    <div id = "quicklinks">
      <p><a href = "/"> >>>Homepage </a> </p>
      <p><a href = "/subwaylines"> >>>All Lines </a> </p>
      <%if session[:id].present?%>
        <p><a href = "/logout"> >>>>Logout</a></p>
      <%end%>
    </div>
  </body>

</html>
