<!doctype html>
<html>
  <head>
    <title>Mystery Riders</title>
    <link rel="stylesheet" href="../../css/style.css">
  </head>

  <body>
    <%path_to_images = "../../images/lines/"%>
    <%l = SubwayLine.all%>
